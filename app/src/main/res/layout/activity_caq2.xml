<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE500"
    tools:context=".caq2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="130dp"
        android:text="Signup Form"
        android:textColor="#FF1100"
        android:textSize="20dp"
        android:textStyle="bold|italic"></TextView>

    <TextView
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email id"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#FA3333"></TextView>

    <EditText
        android:layout_marginTop="50dp"
        android:id="@+id/email_fill"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="E-mail id">
    </EditText>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/email_fill"
        android:layout_width="61dp"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:id="@+id/gender"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#FA3333"></TextView>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/gender"
        android:id="@+id/radiogrp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_fill">
        <RadioButton
            android:layout_width="wrap_content"
            android:id="@+id/Male"
            android:layout_height="wrap_content"
            android:text="Male">
        </RadioButton>

        <RadioButton
            android:layout_width="wrap_content"
            android:id="@+id/Female"
            android:layout_height="wrap_content"
            android:text="Female">
        </RadioButton>

        <RadioButton
            android:layout_width="wrap_content"
            android:id="@+id/nooo"
            android:layout_height="wrap_content"
            android:text="Prefer not to say">
        </RadioButton>
    </RadioGroup>

    <TextView
        android:id="@+id/talent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radiogrp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:text="You are good in:"
        android:textColor="#FA3333"
        android:textSize="15dp"
        android:textStyle="bold">

    </TextView>
    <CheckBox
        android:layout_marginLeft="83dp"
        android:layout_width="wrap_content"
        android:id="@+id/music"
        android:layout_below="@+id/talent"
        android:layout_height="wrap_content"
        android:text="Music">
    </CheckBox>
    <CheckBox
        android:layout_marginLeft="83dp"
        android:layout_width="wrap_content"
        android:id="@+id/sports"
        android:layout_below="@+id/talent"
        android:layout_toRightOf="@+id/music"
        android:layout_height="wrap_content"
        android:text="Sports">
    </CheckBox>
    <CheckBox
        android:layout_marginLeft="83dp"
        android:layout_width="wrap_content"
        android:id="@+id/study"
        android:layout_below="@+id/sports"
        android:layout_height="wrap_content"
        android:text="Study">
    </CheckBox>
    <CheckBox
        android:layout_marginLeft="87dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sleeping"
        android:layout_below="@+id/sports"
        android:layout_toRightOf="@+id/study"
        android:text="Sleeping">
    </CheckBox>
    <CheckBox
        android:layout_marginLeft="83dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eating"
        android:layout_below="@+id/sleeping"
        android:text="Eating">
    </CheckBox>
    <CheckBox
        android:layout_marginLeft="83dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/programing"
        android:layout_below="@+id/sleeping"
        android:layout_toRightOf="@+id/eating"
        android:text="Programing">
    </CheckBox>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/submit"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/eating"
        android:layout_marginLeft="150dp">

    </Button>
</RelativeLayout>